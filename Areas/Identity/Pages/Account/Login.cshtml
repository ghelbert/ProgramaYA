@page
@model LoginModel

@{
    ViewData["Title"] = "INICIAR SESION";
    var userId = TempData["UserId"] as string;
}

<main class="bg-success">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-5">
                <h1 class="text-center mb-4 text-white">@ViewData["Title"]</h1>
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-4 p-md-5">

                        <section>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <h2 class="h4 mb-3">Usa una cuenta local para iniciar sesión.</h2>
                                <hr class="mb-4" />

                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                        aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                        aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Contraseña</label>
                                    <span asp-validation-for="Input.Password" class="text-danger small mt-1"></span>
                                </div>

                                <div class="form-check mb-4">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>

                                <div class="d-grid mb-4">
                                    <button id="login-submit" type="submit" class="btn btn-success btn-lg">Iniciar
                                        Sesión</button>
                                </div>

                                <div class="text-center small">
                                    <p class="mb-1">
                                        <a id="forgot-password" asp-page="./ForgotPassword"
                                            class="link-secondary text-decoration-none">¿Olvidaste tu contraseña?</a>
                                    </p>
                                    <p class="mb-1">
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                            class="link-secondary text-decoration-none">Regístrate como un nuevo
                                            usuario</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                                            class="link-secondary text-decoration-none">Reenviar confirmación de
                                            correo</a>
                                    </p>
                                </div>
                            }
                        </section>
                    </div>
                </div>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-4">
                        <h3 class="h5 text-center mb-3">O inicia sesión con</h3>
                        <div class="d-grid gap-2">
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                                method="post" class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider"
                                        value="@provider.Name" title="Inicia sesión usando tu cuenta de @provider.DisplayName">
                                        <i class="bi bi-person-circle me-2"></i> @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4" role="alert">
                        <p class="mb-0">No hay servicios de autenticación externos configurados. Consulta <a
                                href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank"
                                class="alert-link">este artículo</a> para configurar el inicio de sesión mediante servicios
                            externos.</p>
                    </div>
                }
                
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}