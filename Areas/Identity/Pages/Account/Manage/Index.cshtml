@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de Usuario"; // Título más descriptivo
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<main class="bg-success">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                <h1 class="display-6 text-center mb-5 text-white ">
                    <i class="bi bi-person-circle me-2"></i> @ViewData["Title"]
                </h1>

                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="profile-form" method="post" class="bg-white p-5 shadow rounded-3 border">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" disabled />
                        <label asp-for="Username" class="form-label text-muted">Nombre de Usuario (No
                            modificable)</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Nombres" class="form-control" placeholder="Ingrese sus nombres" />
                        <label asp-for="Input.Nombres" class="form-label">Nombres</label>
                        <span asp-validation-for="Input.Nombres" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Apellidos" class="form-control" placeholder="Ingrese sus apellidos" />
                        <label asp-for="Input.Apellidos" class="form-label">Apellidos</label>
                        <span asp-validation-for="Input.Apellidos" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control"
                            placeholder="Ingrese su número de teléfono" />
                        <label asp-for="Input.PhoneNumber" class="form-label">Número de Teléfono</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <button id="update-profilºe-button" type="submit" class="btn btn-success btn-lg w-100 fw-bold mt-3">
                        <i class="bi bi-save me-2"></i> Guardar Cambios
                    </button>
                </form>
            </div>
        </div>
    </div>

</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}