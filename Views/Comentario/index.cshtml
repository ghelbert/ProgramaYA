@model ProgramaYA.Models.ComentarioCursos


<div class="bg-success text-white " style="height:100vh">
    <div class="container p-5 w-50">
        <h1>RESEÃ‘A DE CURSOS</h1>
        <form method="post" asp-action="Registrar">
            <div class="form-group">
                <label class="control-label">Seleccione un curso</label>
                <select asp-for="Comentario.CursoSeleccionado"
                    asp-items="@(new SelectList(Model.Cursos, "Id", "Nombre"))" class="form-control">
                </select>
            </div>
            <div class="form-group  mt-2">
                <label asp-for="Comentario.Email" class="control-label"></label>
                <input asp-for="Comentario.Email" class="form-control" />
                <span asp-validation-for="Comentario.Email" class="text-danger"></span>
            </div>
            <div class="form-group  mt-2">
                <label asp-for="Comentario.Mensaje" class="control-label"></label>
                <textarea asp-for="Comentario.Mensaje" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comentario.Mensaje" class="text-danger"></span>
            </div>
            <div style="display:flex; justify-content:center" class="mt-5">
                <button type="submit" class="btn btn-primary mt-2">Enviar</button>
            </div>
        </form>
        <h1 class="text-center mt-2">@ViewData["Message"]</h1>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}