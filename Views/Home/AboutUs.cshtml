@{
    ViewData["Title"] = "Acerca de ProgramaYA";
    Layout = "_Layout";
}

@section Styles {
    <style>
        :root {
            --teal-color: #0d9488;
            --teal-dark: #0f766e;
        }
        
        .bg-teal {
            background-color: var(--teal-color) !important;
        }
        
        .text-teal {
            color: var(--teal-color) !important;
        }
        
        .main-bg {
            background: linear-gradient(135deg, var(--teal-color) 0%, var(--teal-dark) 100%);
            min-height: 100vh;
        }
        
        .section-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .tech-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 5px;
            font-size: 18px;
            color: white;
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        .float-animation {
            animation: float 3s ease-in-out infinite;
        }
        
        .float-animation-reverse {
            animation: float 3s ease-in-out infinite reverse;
        }
    </style>
}

<!-- Main Content -->
<main class="main-bg">
    <div class="container py-5">
        <!-- Header Section -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-white mb-4">
                ACERCA DE ProgramaYA!
            </h1>
        </div>

        <!-- Main Content Card -->
        <div class="card section-card">
            <div class="card-body p-5">
                
                <!-- ¿Quiénes Somos? Section -->
                <div class="row mb-5">
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <!-- Team Illustration Placeholder -->
                            <div class="bg-light rounded p-4 text-center" style="height: 250px; display: flex; align-items: center; justify-content: center;">
                                <div>
                                    <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                                    <div class="mt-3">
                                        <div class="d-inline-block bg-primary rounded-circle p-2 me-2">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                        <div class="d-inline-block bg-info rounded-circle p-2 me-2">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                        <div class="d-inline-block bg-success rounded-circle p-2">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    </div>
                                    <p class="text-muted mt-2 small">Equipo de trabajo colaborativo</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h3 class="text-teal fw-bold mb-3">¿QUIENES SOMOS?</h3>
                        <p class="text-dark lh-lg">
                            ProgramaYA es una empresa dedicada a <strong>tu sector o actividad principal</strong>, que tiene como objetivo ofrecer 
                            <strong>soluciones innovadoras, efectivas y accesibles</strong> para 
                            [describir lo que hace, por ejemplo, "mejorar la 
                            productividad en las empresas", "desarrollar software 
                            a medida", "apoyar a emprendedores en sus primeros 
                            pasos comerciales", etc.]. Nos enfocamos en que la 
                            <strong>experiencia de usuario y la mejora continua</strong>.
                        </p>
                    </div>
                </div>

                <!-- Misión Section -->
                <div class="row mb-5">
                    <div class="col-lg-6">
                        <h3 class="text-teal fw-bold mb-3">MISIÓN</h3>
                        <p class="text-dark lh-lg">
                            Nuestra misión es ayudar a nuestros clientes a 
                            alcanzar sus objetivos mediante el uso de tecnología 
                            de vanguardia, asesoramiento profesional y un 
                            permanente firme con la excelencia. En ProgramaYA, 
                            entendemos que cada cliente es único, por eso nos 
                            adaptamos a sus necesidades específicas.
                        </p>
                    </div>
                    <div class="col-lg-6">
                        <div class="position-relative">
                            <!-- Tech Network Illustration -->
                            <div class="bg-primary rounded p-4 text-center" style="height: 250px; position: relative; overflow: hidden;">
                                <div class="position-absolute top-50 start-50 translate-middle">
                                    <i class="fas fa-laptop-code text-white" style="font-size: 3rem;"></i>
                                </div>
                                
                                <!-- Floating Tech Icons -->
                                <div class="tech-icon bg-warning position-absolute" style="top: 20px; left: 20px;">
                                    JS
                                </div>
                                <div class="tech-icon bg-info position-absolute" style="top: 20px; right: 20px;">
                                    <i class="fab fa-react"></i>
                                </div>
                                <div class="tech-icon bg-success position-absolute" style="bottom: 20px; left: 20px;">
                                    <i class="fab fa-node-js"></i>
                                </div>
                                <div class="tech-icon bg-danger position-absolute" style="bottom: 20px; right: 20px;">
                                    <i class="fab fa-java"></i>
                                </div>
                                <div class="tech-icon bg-secondary position-absolute" style="top: 50%; left: 20px; transform: translateY(-50%);">
                                    <i class="fab fa-python"></i>
                                </div>
                                <div class="tech-icon bg-dark position-absolute" style="top: 50%; right: 20px; transform: translateY(-50%);">
                                    <i class="fab fa-github"></i>
                                </div>
                                
                                <!-- Network lines effect -->
                                <svg class="position-absolute top-0 start-0 w-100 h-100" style="opacity: 0.3;">
                                    <line x1="20%" y1="20%" x2="80%" y2="80%" stroke="white" stroke-width="1"/>
                                    <line x1="80%" y1="20%" x2="20%" y2="80%" stroke="white" stroke-width="1"/>
                                    <line x1="50%" y1="10%" x2="50%" y2="90%" stroke="white" stroke-width="1"/>
                                    <line x1="10%" y1="50%" x2="90%" y2="50%" stroke="white" stroke-width="1"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Visión Section -->
                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <!-- Innovation Illustration -->
                            <div class="bg-gradient text-white rounded p-4 text-center" style="height: 250px; background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1); display: flex; align-items: center; justify-content: center; position: relative; overflow: hidden;">
                                <div class="text-center">
                                    <i class="fas fa-rocket" style="font-size: 4rem; margin-bottom: 20px;"></i>
                                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                                            <i class="fas fa-lightbulb"></i>
                                        </div>
                                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                                            <i class="fas fa-chart-line"></i>
                                        </div>
                                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                                            <i class="fas fa-globe"></i>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Floating elements -->
                                <div class="position-absolute float-animation" style="top: 10px; right: 10px;">
                                    <i class="fas fa-star text-white opacity-75"></i>
                                </div>
                                <div class="position-absolute float-animation-reverse" style="bottom: 10px; left: 10px;">
                                    <i class="fas fa-star text-white opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h3 class="text-teal fw-bold mb-3">VISIÓN</h3>
                        <p class="text-dark lh-lg">
                            Ser reconocidos como un referente en el mercado de 
                            [sector de actividad], brindando servicios de 
                            primera calidad que contribuyan al crecimiento y desarrollo 
                            de nuestros clientes y en la comunidad empresarial. 
                            Queremos ser parte de tu éxito y crecimiento, 
                            innovando y anticipándonos a las tendencias del 
                            mercado.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Animaciones adicionales o interactividad
            $('.tech-icon').hover(
                function() {
                    $(this).addClass('shadow-lg').css('transform', 'scale(1.1)');
                },
                function() {
                    $(this).removeClass('shadow-lg').css('transform', 'scale(1)');
                }
            );
        });
    </script>
}