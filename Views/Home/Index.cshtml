</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Safely serialize TempData["UserId"] to JavaScript
            var userId = @Html.Raw(Json.Serialize(TempData["UserId"]));
            console.log("UserId received: ", userId);

            if (userId && userId.trim() !== "") {
                try {
                    sessionStorage.setItem('userId', userId);
                    console.log("User ID stored in sessionStorage: ", userId);
                } catch (e) {
                    console.error("Failed to store User ID in sessionStorage: ", e);
                }
            } else {
                console.error("User ID is not available or is empty.");
            }

            // Note: The prevBtn and nextBtn elements do not exist in the provided HTML.
            // If you intend to use Bootstrap carousel controls, they are already handled by data-bs attributes.
            // Remove or adjust this code if it’s not needed.
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');

            if (prevBtn) {
                prevBtn.addEventListener('click', function () {
                    console.log('Previous courses');
                });
            }

            if (nextBtn) {
                nextBtn.addEventListener('click', function () {
                    console.log('Next courses');
                });
            }
        });
    </script>
}