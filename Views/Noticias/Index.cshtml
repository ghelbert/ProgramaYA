@model IEnumerable<ProgramaYA.Models.Dto.Article>

@{
    ViewData["Title"] = "Noticias";
}

<div class="container mt-5">
    <h1 class="text-center">Últimas Noticias</h1>

    <!-- Buscador: envía 'q' por GET al action Index -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "Noticias")" class="d-flex">
                <input type="text" name="q" class="form-control" id="searchInput" placeholder="Buscar noticias..."
                    value="@(ViewContext.HttpContext.Request.Query["q"].ToString() ?? "")" />
                <button type="submit" class="btn btn-primary ms-2">Buscar</button>
            </form>
        </div>
    </div>

    <!-- Noticias en cartas 3x3 -->
    <div class="row" id="newsGrid">
        @foreach (var news in Model)
        {
            <div class="col-md-4 mb-4 news-card">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(news.UrlToImage))
                    {
                        <img src="@news.UrlToImage" class="card-img-top" alt="Imagen noticia" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text">@news.Description</p>
                        <a href="@news.Url" target="_blank" class="btn btn-primary mt-auto">Leer más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Filtrar noticias con el buscador
        document.getElementById('searchInput').addEventListener('input', function () {
            let filter = this.value.toLowerCase();
            let newsCards = document.querySelectorAll('.news-card');

            newsCards.forEach(function (card) {
                let title = card.querySelector('.card-title')?.textContent.toLowerCase() ?? '';
                let description = card.querySelector('.card-text')?.textContent.toLowerCase() ?? '';

                if (title.includes(filter) || description.includes(filter)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
}