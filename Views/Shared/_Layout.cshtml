@using Microsoft.AspNetCore.Identity
@using ProgramaYA.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ProgramaYA.Areas.Identity.Data.ApplicationDbContext Db

@{
    List<Curso> misCursos = null;
    if (User.Identity.IsAuthenticated)
    {
        var userId = UserManager.GetUserId(User);
        misCursos = Db.Suscripciones
        .Where(s => s.UsuarioId == userId)
        .Select(s => s.Curso)
        .Where(c => c != null)
        .ToList();
    }
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgramaYA</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        /* Chatbot styles */
        #chatbot-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1100;
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        #chat-popup {
            display: none;
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 350px;
            height: 450px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            flex-direction: column;
            z-index: 1100;
        }

        #chat-header {
            background-color: #057c2c;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 10px 10px 0 0;
        }

        #chat-body {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="@Url.Action("Index", "Home")" style="color: #0d9488 !important;">
                ProgramaYA
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse fw-bold" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "About")">Sobre Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "Catalogo")">Catálogo</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-secondary mx-5" href="#" onclick="goToMisCursos()">Mis cursos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "Comentario")">Reseñas</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownApis" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Mis APIs
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownApis">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Noticias")">Noticias</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Currency")">Currency</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Weather")">Weather</a></li>
                            </ul>
                        </li>
                    }
                    else if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown mx-5">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCursos" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                CURSOS
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownCursos">
                                <li><a class="dropdown-item" href="@Url.Action("Todos", "MisCursos")">Mis cursos</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Analisis")">Reseñas</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "MisClientes")">Mis
                                Clientes</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <partial name="_LoginPartial" />
    </nav>

    <!-- Contenido principal -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="w-100 bg-dark text-white mt-auto">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <h5>ProgramaYA</h5>
                    <p>Aprende programación de forma fácil y efectiva.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end justify-content-start gap-3">
                        <a href="#" class="text-muted"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-linkedin fa-lg"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-youtube fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year ProgramaYA. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Chatbot -->
    <div style="z-index: 1100;">
        <div id="msgPop" class="bg-light mb-2 rounded"
            style=" padding:5px;position: fixed; top:92%;right:90px; border: 1px solid black ">
            <p style="margin:0;">
                ¿No sabes que curso elegir?
                Haz click en el robot
            </p>
        </div>
        <button id="chatbot-btn" class="btn btn-light text-success rounded-circle" onclick="toggleChat()"
            title="Abrir chatbot">
            <i class="fas fa-robot"></i>
        </button>
    </div>

    <div id="chat-popup">
        <div id="chat-header">
            <span style="font-weight:bold">Robot Inteligente</span>
            <button onclick="toggleChat()" class="btn-close btn-close-white"></button>
        </div>
        <div id="chat-body">            
            @await Html.PartialAsync("_ChatPopup")
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function goToMisCursos() {
            const userId = sessionStorage.getItem("userId");
            if (userId) {
                window.location.href = `/MisCursos/Index?userId=${encodeURIComponent(userId)}`;
            } else {
                alert("Usuario no identificado.");
            }
        }

        function toggleChat() {
            const chatPopup = document.getElementById("chat-popup");
            chatPopup.style.display = (chatPopup.style.display === "none" || chatPopup.style.display === "") ? "flex" : "none";
            msgPop.style.display = (chatPopup.style.display === "flex") ? "none" : "block";
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>