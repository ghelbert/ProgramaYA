@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgramaYA</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    @await RenderSectionAsync("Styles", required: false)
</head>
<style>
    html,
    body {
        height: 100%;
    }

    body {
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
        /* Hace que el contenido crezca para empujar el footer hacia abajo */
    }
</style>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary fs-3" href="@Url.Action("Index", "Home")"
                style="color: #0d9488 !important;">
                ProgramaYA
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse fw-bold" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "About")">Sobre Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary mx-5" href="@Url.Action("Index", "Catalogo")">Catalogo</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-secondary mx-5" href="#" onclick="goToMisCursos()">Mis cursos</a>
                        </li>
                    }
                    else
                    {
                    }
                </ul>

            </div>
        </div>
        <partial name="_LoginPartial" />
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class=" w-100 bg-dark text-white ">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>ProgramaYA</h5>
                    <p class="text-white">Aprende programación de forma fácil y efectiva.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end justify-content-start gap-3 ">
                        <a href="#" class="text-muted">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a href="#" class="">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a href="#" class="">
                            <i class="fab fa-linkedin fa-lg"></i>
                        </a>
                        <a href="#" class="">
                            <i class="fab fa-youtube fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year ProgramaYA. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (opcional) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
<script>
    function goToMisCursos() {
        const userId = sessionStorage.getItem("userId");
        if (userId) {
            // Redirige al controlador con userId como query string
            window.location.href = `/MisCursos/Index?userId=${encodeURIComponent(userId)}`;
        } else {
            alert("Usuario no identificado.");
        }
    }
</script>