@model ProgramaYA.Models.Curso
@{
    ViewData["Title"] = "Agregar Curso";
}
<div class="bg-success" style="height:100vh">
    <div class="container bg-success text-light fw-bold w-25">
        <h2 class=" text-light text-center pt-5 pb-3">Agregar Nuevo Curso</h2>
        <form asp-action="Agregar" method="post">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripci√≥n</label>
                <textarea asp-for="Descripcion" class="form-control" required></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nivel" class="form-label">Nivel</label>
                <input asp-for="Nivel" class="form-control" required />
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Imagen" class="form-label">Imagen</label>
                <input asp-for="Imagen" class="form-control" required />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Precio" class="form-label">Precio</label>
                <input asp-for="Precio" class="form-control" type="number" min="0" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light ms-5">Agregar Curso</button>
            <a href="@Url.Action("Todos", "MisCursos")" class="btn btn-light ms-5">Cancelar</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}